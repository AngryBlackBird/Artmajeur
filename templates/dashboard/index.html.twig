{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <main>
        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('app_dashboard') }}">
                                    Message
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <h2>Tout les messages</h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                            <tr>
                                <th scope="col">Email du client</th>
                                <th scope="col">Nom du client</th>
                                <th scope="col">Nb message</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.email }}</td>
                                    <td>{{ client.name }}</td>
                                    <td>
                                        <a href="{{ path('app_dashboard_oneClient', {"id": client.id}) }}" class="btn
                                        btn-primary
                                        position-relative">
                                            {{ client.messages.count }}
                                            <span class="position-absolute top-0 start-100
                                            translate-middle
                                             badge
                                            rounded-pill bg-danger">
                                           {{ GetNbMessageNotOpen(client.messages.values) }}
                                            <span class="visually-hidden">unread messages</span>
                                          </span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}
